<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_root"
    android:layout_gravity="center_vertical" 
    android:orientation="vertical" 
    android:layout_width="74.0dp"
    android:layout_height="84.0dp"
    android:padding="5dp">
    <FrameLayout 
        android:layout_width="fill_parent" 
        android:layout_height="64.0dp">
        <ImageView 
            android:id="@+id/filter_image"
            android:layout_width="64.0dp"
            android:layout_height="64.0dp"
            android:src="@drawable/filter_thumb_original" 
            android:scaleType="centerCrop" />
    </FrameLayout>
    <TextView 
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:gravity="center" 
        android:layout_gravity="bottom" 
        android:id="@+id/filter_name"
        android:layout_width="fill_parent" 
        android:layout_height="20.0dp"
        android:text="@string/filter_none" />
</FrameLayout>